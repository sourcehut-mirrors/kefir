
KEFIR_EXTERNAL_TEST_BZIP2_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/bzip2

KEFIR_EXTERNAL_TEST_BZIP2_VERSION := 1.0.8
KEFIR_EXTERNAL_TEST_BZIP2_ARCHIVE_FILENAME := bzip2-$(KEFIR_EXTERNAL_TEST_BZIP2_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_BZIP2_ARCHIVE := $(KEFIR_EXTERNAL_TEST_BZIP2_DIR)/bzip2-$(KEFIR_EXTERNAL_TEST_BZIP2_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_BZIP2_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_BZIP2_DIR)/bzip2-$(KEFIR_EXTERNAL_TEST_BZIP2_VERSION)
KEFIR_EXTERNAL_TEST_BZIP2_URL := https://sourceware.org/pub/bzip2/$(KEFIR_EXTERNAL_TEST_BZIP2_ARCHIVE_FILENAME)

KEFIR_EXTERNAL_TEST_BZIP2_ARCHIVE_SHA256 := ab5a03176ee106d3f0fa90e381da478ddae405918153cca248e682cd0c4a2269

$(KEFIR_EXTERNAL_TEST_BZIP2_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_BZIP2_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_BZIP2_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_BZIP2_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_BZIP2_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_BZIP2_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_BZIP2_ARCHIVE_FILENAME)..."
	@cd "$(KEFIR_EXTERNAL_TEST_BZIP2_DIR)" && tar xvfz "$(KEFIR_EXTERNAL_TEST_BZIP2_ARCHIVE_FILENAME)"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_BZIP2_SOURCE_DIR)/bzip2: $(KEFIR_EXTERNAL_TEST_BZIP2_SOURCE_DIR)/.extracted $(KEFIR_EXE)
	@echo "Building bzip2 $(KEFIR_EXTERNAL_TEST_BZIP2_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_BZIP2_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		$(MAKE) CC="$(realpath $(KEFIR_EXE))"

$(KEFIR_EXTERNAL_TEST_BZIP2_DIR)/tests.log: $(KEFIR_EXTERNAL_TEST_BZIP2_SOURCE_DIR)/bzip2
	@echo "Testing bzip2 $(KEFIR_EXTERNAL_TEST_BZIP2_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_BZIP2_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		bash -c 'set -o pipefail; $(MAKE) check CC="$(realpath $(KEFIR_EXE))" 2>&1 | tee "$(shell realpath "$@.tmp")"'
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TESTS_DIR)/bzip2.test.done: $(KEFIR_EXTERNAL_TEST_BZIP2_DIR)/tests.log
	@$(SOURCE_DIR)/tests/external/bzip2/validate.sh "$(KEFIR_EXTERNAL_TEST_BZIP2_DIR)/tests.log"
	@touch "$@"
	@echo "Bzip2 $(KEFIR_EXTERNAL_TEST_BZIP2_VERSION) test successfully finished"

EXTERNAL_TESTS_FAST_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/bzip2.test.done
