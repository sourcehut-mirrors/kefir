
KEFIR_EXTERNAL_TEST_VIM_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/vim

KEFIR_EXTERNAL_TEST_VIM_VERSION := 8.1
KEFIR_EXTERNAL_TEST_VIM_VERSION_SHORT := 81
KEFIR_EXTERNAL_TEST_VIM_ARCHIVE_FILENAME := vim-$(KEFIR_EXTERNAL_TEST_VIM_VERSION).tar.bz2
KEFIR_EXTERNAL_TEST_VIM_ARCHIVE := $(KEFIR_EXTERNAL_TEST_VIM_DIR)/$(KEFIR_EXTERNAL_TEST_VIM_ARCHIVE_FILENAME)
KEFIR_EXTERNAL_TEST_VIM_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_VIM_DIR)/vim$(KEFIR_EXTERNAL_TEST_VIM_VERSION_SHORT)
KEFIR_EXTERNAL_TEST_VIM_URL := ftp://ftp.vim.org/pub/vim/unix/$(KEFIR_EXTERNAL_TEST_VIM_ARCHIVE_FILENAME)

KEFIR_EXTERNAL_TEST_VIM_ARCHIVE_SHA256 := 8b69fbd01c877dd8ecbbeca1dc66e5e927228d631ac4c2174b9307eb5c827c86

$(KEFIR_EXTERNAL_TEST_VIM_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_VIM_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_VIM_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_VIM_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_VIM_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_VIM_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_VIM_ARCHIVE_FILENAME)..."
	@cd "$(KEFIR_EXTERNAL_TEST_VIM_DIR)" && \
		bunzip2 -d < "$(KEFIR_EXTERNAL_TEST_VIM_ARCHIVE_FILENAME)" > "$(basename $(KEFIR_EXTERNAL_TEST_VIM_ARCHIVE_FILENAME))"
	@cd "$(KEFIR_EXTERNAL_TEST_VIM_DIR)" && tar xvf "$(basename $(KEFIR_EXTERNAL_TEST_VIM_ARCHIVE_FILENAME))"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_VIM_SOURCE_DIR)/src/auto/config.h: $(KEFIR_EXTERNAL_TEST_VIM_SOURCE_DIR)/.extracted $(KEFIR_EXE)
	@echo "Configuring vim $(KEFIR_EXTERNAL_TEST_VIM_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_VIM_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		./configure

$(KEFIR_EXTERNAL_TEST_VIM_SOURCE_DIR)/src/vim: $(KEFIR_EXTERNAL_TEST_VIM_SOURCE_DIR)/src/auto/config.h
	@echo "Building vim $(KEFIR_EXTERNAL_TEST_VIM_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_VIM_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		$(MAKE)

$(KEFIR_EXTERNAL_TESTS_DIR)/vim.test.done: $(KEFIR_EXTERNAL_TEST_VIM_SOURCE_DIR)/src/vim
	@echo "Testing vim $(KEFIR_EXTERNAL_TEST_VIM_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_VIM_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		$(MAKE) test -j1
	@echo "Vim $(KEFIR_EXTERNAL_TEST_VIM_VERSION) test suite successfully finished"
	@touch "$@"

EXTERNAL_TESTS_FAST_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/vim.test.done
