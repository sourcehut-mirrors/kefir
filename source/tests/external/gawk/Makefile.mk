
KEFIR_EXTERNAL_TEST_GAWK_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/gawk

KEFIR_EXTERNAL_TEST_GAWK_VERSION := 5.3.2
KEFIR_EXTERNAL_TEST_GAWK_ARCHIVE_FILENAME := gawk-$(KEFIR_EXTERNAL_TEST_GAWK_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_GAWK_ARCHIVE := $(KEFIR_EXTERNAL_TEST_GAWK_DIR)/$(KEFIR_EXTERNAL_TEST_GAWK_ARCHIVE_FILENAME)
KEFIR_EXTERNAL_TEST_GAWK_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_GAWK_DIR)/gawk-$(KEFIR_EXTERNAL_TEST_GAWK_VERSION)
KEFIR_EXTERNAL_TEST_GAWK_URL := https://gnuftp.uib.no/gawk/gawk-$(KEFIR_EXTERNAL_TEST_GAWK_VERSION).tar.gz

KEFIR_EXTERNAL_TEST_GAWK_ARCHIVE_SHA256 := 8639a1a88fb411a1be02663739d03e902a6d313b5c6fe024d0bfeb3341a19a11

$(KEFIR_EXTERNAL_TEST_GAWK_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_GAWK_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_GAWK_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_GAWK_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_GAWK_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_GAWK_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_GAWK_ARCHIVE_FILENAME)..."
	@cd "$(KEFIR_EXTERNAL_TEST_GAWK_DIR)" && tar xvfz "$(KEFIR_EXTERNAL_TEST_GAWK_ARCHIVE_FILENAME)"
	@echo "Patching gawk $(KEFIR_EXTERNAL_TEST_GAWK_VERSION)..."
# Fix personality failures in a container
	@cd "$(KEFIR_EXTERNAL_TEST_GAWK_SOURCE_DIR)" && patch -p0 < "$(realpath $(SOURCE_DIR))/tests/external/gawk/gawk.patch"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_GAWK_SOURCE_DIR)/Makefile: $(KEFIR_EXTERNAL_TEST_GAWK_SOURCE_DIR)/.extracted $(KEFIR_EXE)
	@echo "Configuring gawk $(KEFIR_EXTERNAL_TEST_GAWK_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_GAWK_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		./configure

$(KEFIR_EXTERNAL_TEST_GAWK_SOURCE_DIR)/gawk: $(KEFIR_EXTERNAL_TEST_GAWK_SOURCE_DIR)/Makefile
	@echo "Building gawk $(KEFIR_EXTERNAL_TEST_GAWK_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_GAWK_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		$(MAKE)

$(KEFIR_EXTERNAL_TEST_GAWK_DIR)/tests.log: $(KEFIR_EXTERNAL_TEST_GAWK_SOURCE_DIR)/gawk
	@echo "Testing gawk $(KEFIR_EXTERNAL_TEST_GAWK_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_GAWK_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		bash -c 'set -o pipefail; $(MAKE) check | tee "$(shell realpath $@.tmp)"'
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TESTS_DIR)/gawk.test.done: $(KEFIR_EXTERNAL_TEST_GAWK_DIR)/tests.log
	@$(SOURCE_DIR)/tests/external/gawk/validate.sh "$(KEFIR_EXTERNAL_TEST_GAWK_DIR)/tests.log"
	@touch "$@"
	@echo "Successfully tested gawk $(KEFIR_EXTERNAL_TEST_GAWK_VERSION)"

EXTERNAL_TESTS_FAST_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/gawk.test.done
