
KEFIR_EXTERNAL_TEST_LIBSIR_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/libsir

KEFIR_EXTERNAL_TEST_LIBSIR_VERSION := 944869ec2030fda2a7afc078ec8aa2d32f8e444d
KEFIR_EXTERNAL_TEST_LIBSIR_ARCHIVE_FILENAME := $(KEFIR_EXTERNAL_TEST_LIBSIR_VERSION).zip
KEFIR_EXTERNAL_TEST_LIBSIR_ARCHIVE := $(KEFIR_EXTERNAL_TEST_LIBSIR_DIR)/$(KEFIR_EXTERNAL_TEST_LIBSIR_VERSION).zip
KEFIR_EXTERNAL_TEST_LIBSIR_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_LIBSIR_DIR)/libsir-$(KEFIR_EXTERNAL_TEST_LIBSIR_VERSION)
KEFIR_EXTERNAL_TEST_LIBSIR_URL := https://github.com/aremmell/libsir/archive/$(KEFIR_EXTERNAL_TEST_LIBSIR_ARCHIVE_FILENAME)

KEFIR_EXTERNAL_TEST_LIBSIR_ARCHIVE_SHA256 := 21ab859f67b97d01df3d79953e39430f6e37aac045d5b9460b3a54fc5ac4c149

$(KEFIR_EXTERNAL_TEST_LIBSIR_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_LIBSIR_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_LIBSIR_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_LIBSIR_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_LIBSIR_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_LIBSIR_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_LIBSIR_ARCHIVE_FILENAME)..."
	@rm -rf "$(KEFIR_EXTERNAL_TEST_LIBSIR_SOURCE_DIR)"
	@cd "$(KEFIR_EXTERNAL_TEST_LIBSIR_DIR)" && unzip "$(KEFIR_EXTERNAL_TEST_LIBSIR_ARCHIVE_FILENAME)"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_LIBSIR_SOURCE_DIR)/build/bin/sirtests: $(KEFIR_EXTERNAL_TEST_LIBSIR_SOURCE_DIR)/.extracted $(KEFIR_EXE)
	@echo "Building libsir $(KEFIR_EXTERNAL_TEST_LIBSIR_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_LIBSIR_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		$(MAKE)

$(KEFIR_EXTERNAL_TESTS_DIR)/libsir.test.done: $(KEFIR_EXTERNAL_TEST_LIBSIR_SOURCE_DIR)/build/bin/sirtests
	@echo "Testing libsir $(KEFIR_EXTERNAL_TEST_LIBSIR_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_LIBSIR_SOURCE_DIR)" && ./build/bin/sirexample
	@cd "$(KEFIR_EXTERNAL_TEST_LIBSIR_SOURCE_DIR)" && ./build/bin/sirtests
	@touch "$@"
	@echo "libsir $(KEFIR_EXTERNAL_TEST_LIBSIR_VERSION) tests successfully finished"

EXTERNAL_TESTS_FAST_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/libsir.test.done
