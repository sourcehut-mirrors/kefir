
KEFIR_EXTERNAL_TEST_PCRE2_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/pcre2

KEFIR_EXTERNAL_TEST_PCRE2_VERSION := 10.45
KEFIR_EXTERNAL_TEST_PCRE2_ARCHIVE_FILENAME := pcre2-$(KEFIR_EXTERNAL_TEST_PCRE2_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_PCRE2_ARCHIVE := $(KEFIR_EXTERNAL_TEST_PCRE2_DIR)/$(KEFIR_EXTERNAL_TEST_PCRE2_ARCHIVE_FILENAME)
KEFIR_EXTERNAL_TEST_PCRE2_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_PCRE2_DIR)/pcre2-$(KEFIR_EXTERNAL_TEST_PCRE2_VERSION)
KEFIR_EXTERNAL_TEST_PCRE2_URL := https://github.com/PCRE2Project/pcre2/releases/download/pcre2-$(KEFIR_EXTERNAL_TEST_PCRE2_VERSION)/$(KEFIR_EXTERNAL_TEST_PCRE2_ARCHIVE_FILENAME)

KEFIR_EXTERNAL_TEST_PCRE2_ARCHIVE_SHA256 := 0e138387df7835d7403b8351e2226c1377da804e0737db0e071b48f07c9d12ee

$(KEFIR_EXTERNAL_TEST_PCRE2_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_PCRE2_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_PCRE2_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_PCRE2_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_PCRE2_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_PCRE2_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_PCRE2_ARCHIVE_FILENAME)..."
	@cd "$(KEFIR_EXTERNAL_TEST_PCRE2_DIR)" && tar xvfz "$(KEFIR_EXTERNAL_TEST_PCRE2_ARCHIVE_FILENAME)"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_PCRE2_SOURCE_DIR)/Makefile: $(KEFIR_EXTERNAL_TEST_PCRE2_SOURCE_DIR)/.extracted $(KEFIR_EXE)
	@echo "Configure pcre2 $(KEFIR_EXTERNAL_TEST_PCRE2_VERSION)..."
	@mkdir -p "$(shell dirname $@)"
	@cd "$(KEFIR_EXTERNAL_TEST_PCRE2_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		./configure

$(KEFIR_EXTERNAL_TEST_PCRE2_SOURCE_DIR)/libpcre2-8.la: $(KEFIR_EXTERNAL_TEST_PCRE2_SOURCE_DIR)/Makefile
	@echo "Building pcre2 $(KEFIR_EXTERNAL_TEST_PCRE2_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_PCRE2_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		$(MAKE)

$(KEFIR_EXTERNAL_TEST_PCRE2_DIR)/tests.log: $(KEFIR_EXTERNAL_TEST_PCRE2_SOURCE_DIR)/libpcre2-8.la
	@echo "Testing pcre2 $(KEFIR_EXTERNAL_TEST_PCRE2_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_PCRE2_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		bash -c 'set -o pipefail; $(MAKE) check 2>&1 | tee "$(shell realpath "$@.tmp")"'
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TESTS_DIR)/pcre2.test.done: $(KEFIR_EXTERNAL_TEST_PCRE2_DIR)/tests.log
	@"$(SOURCE_DIR)/tests/external/pcre2/validate.sh" "$(KEFIR_EXTERNAL_TEST_PCRE2_DIR)/tests.log"
	@touch "$@"
	@echo "pcre2 $(KEFIR_EXTERNAL_TEST_PCRE2_VERSION) test successfully finished"

EXTERNAL_TESTS_FAST_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/pcre2.test.done
