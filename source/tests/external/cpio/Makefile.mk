
KEFIR_EXTERNAL_TEST_CPIO_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/cpio

KEFIR_EXTERNAL_TEST_CPIO_VERSION := 2.15
KEFIR_EXTERNAL_TEST_CPIO_ARCHIVE_FILENAME := cpio-$(KEFIR_EXTERNAL_TEST_CPIO_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_CPIO_ARCHIVE := $(KEFIR_EXTERNAL_TEST_CPIO_DIR)/cpio-$(KEFIR_EXTERNAL_TEST_CPIO_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_CPIO_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_CPIO_DIR)/cpio-$(KEFIR_EXTERNAL_TEST_CPIO_VERSION)
KEFIR_EXTERNAL_TEST_CPIO_URL := https://mirrors.dotsrc.org/gnu/cpio/$(KEFIR_EXTERNAL_TEST_CPIO_ARCHIVE_FILENAME)

KEFIR_EXTERNAL_TEST_CPIO_ARCHIVE_SHA256 := efa50ef983137eefc0a02fdb51509d624b5e3295c980aa127ceee4183455499e

$(KEFIR_EXTERNAL_TEST_CPIO_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_CPIO_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_CPIO_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_CPIO_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_CPIO_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_CPIO_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_CPIO_ARCHIVE_FILENAME)..."
	@cd "$(KEFIR_EXTERNAL_TEST_CPIO_DIR)" && tar xvfz "$(KEFIR_EXTERNAL_TEST_CPIO_ARCHIVE_FILENAME)"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_CPIO_SOURCE_DIR)/Makefile: $(KEFIR_EXTERNAL_TEST_CPIO_SOURCE_DIR)/.extracted
	@echo "Building cpio $(KEFIR_EXTERNAL_TEST_CPIO_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_CPIO_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		./configure

$(KEFIR_EXTERNAL_TEST_CPIO_SOURCE_DIR)/src/cpio: $(KEFIR_EXTERNAL_TEST_CPIO_SOURCE_DIR)/Makefile
	@echo "Building cpio $(KEFIR_EXTERNAL_TEST_CPIO_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_CPIO_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		$(MAKE)

$(KEFIR_EXTERNAL_TEST_CPIO_DIR)/tests.log: $(KEFIR_EXTERNAL_TEST_CPIO_SOURCE_DIR)/src/cpio
	@echo "Testing cpio $(KEFIR_EXTERNAL_TEST_CPIO_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_CPIO_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		bash -c 'set -o pipefail; $(MAKE) check 2>&1 | tee "$(shell realpath "$@.tmp")"'
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TESTS_DIR)/cpio.test.done: $(KEFIR_EXTERNAL_TEST_CPIO_DIR)/tests.log
	@$(SOURCE_DIR)/tests/external/cpio/validate.sh "$(KEFIR_EXTERNAL_TEST_CPIO_DIR)/tests.log"
	@touch "$@"
	@echo "cpio $(KEFIR_EXTERNAL_TEST_CPIO_VERSION) test successfully finished"

EXTERNAL_TESTS_FAST_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/cpio.test.done
