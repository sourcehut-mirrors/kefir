
KEFIR_EXTERNAL_TEST_C23DOKU_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/c23doku

KEFIR_EXTERNAL_TEST_C23DOKU_VERSION := c0bd5daa91f4ffa0e06f418850111691577cd365
KEFIR_EXTERNAL_TEST_C23DOKU_ARCHIVE_FILENAME := $(KEFIR_EXTERNAL_TEST_C23DOKU_VERSION).zip
KEFIR_EXTERNAL_TEST_C23DOKU_ARCHIVE := $(KEFIR_EXTERNAL_TEST_C23DOKU_DIR)/$(KEFIR_EXTERNAL_TEST_C23DOKU_ARCHIVE_FILENAME)
KEFIR_EXTERNAL_TEST_C23DOKU_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_C23DOKU_DIR)/c23doku-$(KEFIR_EXTERNAL_TEST_C23DOKU_VERSION)
KEFIR_EXTERNAL_TEST_C23DOKU_URL := https://github.com/fuhsnn/c23doku/archive/$(KEFIR_EXTERNAL_TEST_C23DOKU_ARCHIVE_FILENAME)

KEFIR_EXTERNAL_TEST_C23DOKU_ARCHIVE_SHA256 := c807d91d8772c2e67dfb5d820e9f215f276675c7143a613860fa1b4102f822b6

$(KEFIR_EXTERNAL_TEST_C23DOKU_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_C23DOKU_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_C23DOKU_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_C23DOKU_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_C23DOKU_SOURCE_DIR)/test_kefir.sh: $(KEFIR_EXTERNAL_TEST_C23DOKU_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_C23DOKU_ARCHIVE_FILENAME)..."
	@cd "$(KEFIR_EXTERNAL_TEST_C23DOKU_DIR)" && unzip -o "$(KEFIR_EXTERNAL_TEST_C23DOKU_ARCHIVE_FILENAME)"
	@echo "Generating $@"
	@echo "set -x" > "$@.tmp"
	@sed '/c2y.c/d' "$(KEFIR_EXTERNAL_TEST_C23DOKU_SOURCE_DIR)/test.sh" >> "$@.tmp"
	@chmod +x "$@.tmp"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_C23DOKU_SOURCE_DIR)/test.log: $(KEFIR_EXTERNAL_TEST_C23DOKU_SOURCE_DIR)/test_kefir.sh $(KEFIR_EXE)
	@echo "Testing c23doku $(KEFIR_EXTERNAL_TEST_C23DOKU_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_C23DOKU_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		bash -c 'set -o pipefail; ./test_kefir.sh | tee test.log.tmp'
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TESTS_DIR)/c23doku.test.done: $(KEFIR_EXTERNAL_TEST_C23DOKU_SOURCE_DIR)/test.log
	@$(SOURCE_DIR)/tests/external/c23doku/validate.sh "$(KEFIR_EXTERNAL_TEST_C23DOKU_SOURCE_DIR)/test.log"
	@touch "$@"
	@echo "Successfully tested c23doku $(KEFIR_EXTERNAL_TEST_C23DOKU_VERSION)"

EXTERNAL_TESTS_FAST_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/c23doku.test.done
