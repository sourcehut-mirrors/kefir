
KEFIR_EXTERNAL_TEST_MIMALLOC_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/mimalloc

KEFIR_EXTERNAL_TEST_MIMALLOC_VERSION := 3.0.8
KEFIR_EXTERNAL_TEST_MIMALLOC_ARCHIVE_FILENAME := v$(KEFIR_EXTERNAL_TEST_MIMALLOC_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_MIMALLOC_ARCHIVE := $(KEFIR_EXTERNAL_TEST_MIMALLOC_DIR)/$(KEFIR_EXTERNAL_TEST_MIMALLOC_ARCHIVE_FILENAME)
KEFIR_EXTERNAL_TEST_MIMALLOC_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_MIMALLOC_DIR)/mimalloc-$(KEFIR_EXTERNAL_TEST_MIMALLOC_VERSION)
KEFIR_EXTERNAL_TEST_MIMALLOC_URL := https://github.com/microsoft/mimalloc/archive/refs/tags/$(KEFIR_EXTERNAL_TEST_MIMALLOC_ARCHIVE_FILENAME)

KEFIR_EXTERNAL_TEST_MIMALLOC_ARCHIVE_SHA256 := 5a51dfe8e07a1cdfa2e1bff924ed996f5910f3135c5a9dec7c9da83d97e6edb7

$(KEFIR_EXTERNAL_TEST_MIMALLOC_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_MIMALLOC_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_MIMALLOC_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_MIMALLOC_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_MIMALLOC_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_MIMALLOC_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_MIMALLOC_ARCHIVE_FILENAME)..."
	@cd "$(KEFIR_EXTERNAL_TEST_MIMALLOC_DIR)" && tar xvfz "$(KEFIR_EXTERNAL_TEST_MIMALLOC_ARCHIVE_FILENAME)"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_MIMALLOC_SOURCE_DIR)/build/Makefile: $(KEFIR_EXTERNAL_TEST_MIMALLOC_SOURCE_DIR)/.extracted $(KEFIR_EXE)
	@echo "Configure mimalloc $(KEFIR_EXTERNAL_TEST_MIMALLOC_VERSION)..."
	@mkdir -p "$(shell dirname $@)"
	@cd "$(KEFIR_EXTERNAL_TEST_MIMALLOC_SOURCE_DIR)/build" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		cmake -DCMAKE_C_COMPILER="$(realpath $(KEFIR_EXE))" ..

$(KEFIR_EXTERNAL_TEST_MIMALLOC_SOURCE_DIR)/build/libmimalloc.a: $(KEFIR_EXTERNAL_TEST_MIMALLOC_SOURCE_DIR)/build/Makefile
	@echo "Building mimalloc $(KEFIR_EXTERNAL_TEST_MIMALLOC_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_MIMALLOC_SOURCE_DIR)/build" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		$(MAKE)

$(KEFIR_EXTERNAL_TEST_MIMALLOC_DIR)/tests.log: $(KEFIR_EXTERNAL_TEST_MIMALLOC_SOURCE_DIR)/build/libmimalloc.a
	@echo "Testing mimalloc $(KEFIR_EXTERNAL_TEST_MIMALLOC_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_MIMALLOC_SOURCE_DIR)/build" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		bash -c 'set -o pipefail; $(MAKE) test 2>&1 | tee "$(shell realpath "$@.tmp")"'
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TESTS_DIR)/mimalloc.test.done: $(KEFIR_EXTERNAL_TEST_MIMALLOC_DIR)/tests.log
	@"$(SOURCE_DIR)/tests/external/mimalloc/validate.sh" "$(KEFIR_EXTERNAL_TEST_MIMALLOC_DIR)/tests.log"
	@touch "$@"
	@echo "mimalloc $(KEFIR_EXTERNAL_TEST_MIMALLOC_VERSION) test successfully finished"

EXTERNAL_TESTS_FAST_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/mimalloc.test.done
