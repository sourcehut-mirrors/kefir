
KEFIR_EXTERNAL_TEST_LZ4_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/lz4

KEFIR_EXTERNAL_TEST_LZ4_VERSION := 1.10.0
KEFIR_EXTERNAL_TEST_LZ4_ARCHIVE_FILENAME := lz4-$(KEFIR_EXTERNAL_TEST_LZ4_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_LZ4_ARCHIVE := $(KEFIR_EXTERNAL_TEST_LZ4_DIR)/$(KEFIR_EXTERNAL_TEST_LZ4_ARCHIVE_FILENAME)
KEFIR_EXTERNAL_TEST_LZ4_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_LZ4_DIR)/lz4-$(KEFIR_EXTERNAL_TEST_LZ4_VERSION)
KEFIR_EXTERNAL_TEST_LZ4_URL := https://github.com/lz4/lz4/releases/download/v$(KEFIR_EXTERNAL_TEST_LZ4_VERSION)/$(KEFIR_EXTERNAL_TEST_LZ4_ARCHIVE_FILENAME)

KEFIR_EXTERNAL_TEST_LZ4_ARCHIVE_SHA256 := 537512904744b35e232912055ccf8ec66d768639ff3abe5788d90d792ec5f48b

$(KEFIR_EXTERNAL_TEST_LZ4_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_LZ4_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_LZ4_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_LZ4_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_LZ4_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_LZ4_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_LZ4_ARCHIVE_FILENAME)..."
	@cd "$(KEFIR_EXTERNAL_TEST_LZ4_DIR)" && tar xvfz "$(KEFIR_EXTERNAL_TEST_LZ4_ARCHIVE_FILENAME)"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_LZ4_SOURCE_DIR)/lz4: $(KEFIR_EXTERNAL_TEST_LZ4_SOURCE_DIR)/.extracted
	@echo "Building lz4 $(KEFIR_EXTERNAL_TEST_LZ4_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_LZ4_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		$(MAKE)

$(KEFIR_EXTERNAL_TEST_LZ4_DIR)/tests.log: $(KEFIR_EXTERNAL_TEST_LZ4_SOURCE_DIR)/lz4
	@echo "Testing lz4 $(KEFIR_EXTERNAL_TEST_LZ4_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_LZ4_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		bash -c 'set -o pipefail; $(MAKE) check 2>&1 | tee "$(shell realpath "$@.tmp")"'
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TESTS_DIR)/lz4.test.done: $(KEFIR_EXTERNAL_TEST_LZ4_DIR)/tests.log
	@touch "$@"
	@echo "lz4 $(KEFIR_EXTERNAL_TEST_LZ4_VERSION) test successfully finished"

EXTERNAL_TESTS_FAST_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/lz4.test.done
