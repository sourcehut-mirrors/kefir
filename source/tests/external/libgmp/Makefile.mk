
KEFIR_EXTERNAL_TEST_LIBGMP_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/libgmp

KEFIR_EXTERNAL_TEST_LIBGMP_VERSION := 6.3.0
KEFIR_EXTERNAL_TEST_LIBGMP_ARCHIVE_FILENAME := gmp-$(KEFIR_EXTERNAL_TEST_LIBGMP_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_LIBGMP_ARCHIVE := $(KEFIR_EXTERNAL_TEST_LIBGMP_DIR)/gmp-$(KEFIR_EXTERNAL_TEST_LIBGMP_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_LIBGMP_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_LIBGMP_DIR)/gmp-$(KEFIR_EXTERNAL_TEST_LIBGMP_VERSION)
KEFIR_EXTERNAL_TEST_LIBGMP_URL := https://gnuftp.uib.no/gmp/$(KEFIR_EXTERNAL_TEST_LIBGMP_ARCHIVE_FILENAME)

KEFIR_EXTERNAL_TEST_LIBGMP_ARCHIVE_SHA256 := e56fd59d76810932a0555aa15a14b61c16bed66110d3c75cc2ac49ddaa9ab24c

$(KEFIR_EXTERNAL_TEST_LIBGMP_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_LIBGMP_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_LIBGMP_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_LIBGMP_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_LIBGMP_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_LIBGMP_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_LIBGMP_ARCHIVE_FILENAME)..."
	@cd "$(KEFIR_EXTERNAL_TEST_LIBGMP_DIR)" && tar xvfz "$(KEFIR_EXTERNAL_TEST_LIBGMP_ARCHIVE_FILENAME)"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_LIBGMP_SOURCE_DIR)/Makefile: $(KEFIR_EXTERNAL_TEST_LIBGMP_SOURCE_DIR)/.extracted $(KEFIR_EXE)
	@echo "Configuring libgmp $(KEFIR_EXTERNAL_TEST_LIBGMP_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_LIBGMP_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		./configure

$(KEFIR_EXTERNAL_TEST_LIBGMP_SOURCE_DIR)/.libs/libgmp.so: $(KEFIR_EXTERNAL_TEST_LIBGMP_SOURCE_DIR)/Makefile
	@echo "Building libgmp $(KEFIR_EXTERNAL_TEST_LIBGMP_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_LIBGMP_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		$(MAKE)

$(KEFIR_EXTERNAL_TEST_LIBGMP_DIR)/tests.log: $(KEFIR_EXTERNAL_TEST_LIBGMP_SOURCE_DIR)/.libs/libgmp.so
	@echo "Testing libgmp $(KEFIR_EXTERNAL_TEST_LIBGMP_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_LIBGMP_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		bash -c 'set -o pipefail; $(MAKE) check 2>&1 | tee "$(shell realpath "$@.tmp")"'
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TESTS_DIR)/libgmp.test.done: $(KEFIR_EXTERNAL_TEST_LIBGMP_DIR)/tests.log
	@$(SOURCE_DIR)/tests/external/libgmp/validate.sh "$(KEFIR_EXTERNAL_TEST_LIBGMP_DIR)/tests.log"
	@touch "$@"
	@echo "libgmp $(KEFIR_EXTERNAL_TEST_LIBGMP_VERSION) test successfully finished"

EXTERNAL_TESTS_FAST_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/libgmp.test.done
