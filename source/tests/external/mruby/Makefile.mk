
KEFIR_EXTERNAL_TEST_MRUBY_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/mruby

KEFIR_EXTERNAL_TEST_MRUBY_VERSION := 3.4.0
KEFIR_EXTERNAL_TEST_MRUBY_ARCHIVE_FILENAME := $(KEFIR_EXTERNAL_TEST_MRUBY_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_MRUBY_ARCHIVE := $(KEFIR_EXTERNAL_TEST_MRUBY_DIR)/$(KEFIR_EXTERNAL_TEST_MRUBY_ARCHIVE_FILENAME)
KEFIR_EXTERNAL_TEST_MRUBY_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_MRUBY_DIR)/mruby-$(KEFIR_EXTERNAL_TEST_MRUBY_VERSION)
KEFIR_EXTERNAL_TEST_MRUBY_URL := https://github.com/mruby/mruby/archive/refs/tags/$(KEFIR_EXTERNAL_TEST_MRUBY_ARCHIVE_FILENAME)

KEFIR_EXTERNAL_TEST_MRUBY_ARCHIVE_SHA256 := 183711c7a26d932b5342e64860d16953f1cc6518d07b2c30a02937fb362563f8

$(KEFIR_EXTERNAL_TEST_MRUBY_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_MRUBY_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_MRUBY_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_MRUBY_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_MRUBY_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_MRUBY_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_MRUBY_ARCHIVE_FILENAME)..."
	@cd "$(KEFIR_EXTERNAL_TEST_MRUBY_DIR)" && tar xvfz "$(KEFIR_EXTERNAL_TEST_MRUBY_ARCHIVE_FILENAME)"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_MRUBY_SOURCE_DIR)/mruby: $(KEFIR_EXTERNAL_TEST_MRUBY_SOURCE_DIR)/.extracted $(KEFIR_EXE)
	@echo "Building mruby $(KEFIR_EXTERNAL_TEST_MRUBY_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_MRUBY_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		LC_ALL=C.UTF-8 \
		CC="$(realpath $(KEFIR_EXE))" \
		rake

$(KEFIR_EXTERNAL_TEST_MRUBY_DIR)/tests.log: $(KEFIR_EXTERNAL_TEST_MRUBY_SOURCE_DIR)/mruby
	@echo "Testing mruby $(KEFIR_EXTERNAL_TEST_MRUBY_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_MRUBY_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		LC_ALL=C.UTF-8 \
		CC="$(realpath $(KEFIR_EXE))" \
		bash -c 'set -o pipefail; rake test 2>&1 | tee "$(shell realpath "$@.tmp")"'
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TESTS_DIR)/mruby.test.done: $(KEFIR_EXTERNAL_TEST_MRUBY_DIR)/tests.log
	@$(SOURCE_DIR)/tests/external/mruby/validate.sh "$(KEFIR_EXTERNAL_TEST_MRUBY_DIR)/tests.log"
	@touch "$@"
	@echo "mruby $(KEFIR_EXTERNAL_TEST_MRUBY_VERSION) test suite successfully finished"

EXTERNAL_TESTS_SLOW_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/mruby.test.done
