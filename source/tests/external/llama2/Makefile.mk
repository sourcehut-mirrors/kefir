
KEFIR_EXTERNAL_TEST_LLAMA2_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/llama2

KEFIR_EXTERNAL_TEST_LLAMA2_VERSION := 350e04fe35433e6d2941dce5a1f53308f87058eb
KEFIR_EXTERNAL_TEST_LLAMA2_ARCHIVE_FILENAME := llama2.c-$(KEFIR_EXTERNAL_TEST_LLAMA2_VERSION).zip
KEFIR_EXTERNAL_TEST_LLAMA2_ARCHIVE := $(KEFIR_EXTERNAL_TEST_LLAMA2_DIR)/$(KEFIR_EXTERNAL_TEST_LLAMA2_ARCHIVE_FILENAME)
KEFIR_EXTERNAL_TEST_LLAMA2_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_LLAMA2_DIR)/llama2.c-$(KEFIR_EXTERNAL_TEST_LLAMA2_VERSION)
KEFIR_EXTERNAL_TEST_LLAMA2_URL := https://github.com/karpathy/llama2.c/archive/350e04fe35433e6d2941dce5a1f53308f87058eb.zip

KEFIR_EXTERNAL_TEST_LLAMA2_STORIES15M_FILENAME := stories15M.bin
KEFIR_EXTERNAL_TEST_LLAMA2_STORIES15M_FILEPATH := $(KEFIR_EXTERNAL_TEST_LLAMA2_DIR)/$(KEFIR_EXTERNAL_TEST_LLAMA2_STORIES15M_FILENAME)
KEFIR_EXTERNAL_TEST_LLAMA2_STORIES15M_URL := https://huggingface.co/karpathy/tinyllamas/resolve/main/$(KEFIR_EXTERNAL_TEST_LLAMA2_STORIES15M_FILENAME)

KEFIR_EXTERNAL_TEST_LLAMA2_ARCHIVE_SHA256 := 601a61cde54fed2991c66d9f64b1ce0dfdc0e5df2b7d230c6b8630ad685f862c
KEFIR_EXTERNAL_TEST_LLAMA2_STORIES15M_SHA256 := cd590644d963867a2b6e5a1107f51fad663c41d79c149fbecbbb1f95fa81f49a

$(KEFIR_EXTERNAL_TEST_LLAMA2_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_LLAMA2_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_LLAMA2_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_LLAMA2_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_LLAMA2_STORIES15M_FILEPATH):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_LLAMA2_STORIES15M_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_LLAMA2_STORIES15M_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_LLAMA2_STORIES15M_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_LLAMA2_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_LLAMA2_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_LLAMA2_ARCHIVE_FILENAME)..."
	@rm -rf "$(KEFIR_EXTERNAL_TEST_LLAMA2_SOURCE_DIR)"
	@cd "$(KEFIR_EXTERNAL_TEST_LLAMA2_DIR)" && unzip "$(KEFIR_EXTERNAL_TEST_LLAMA2_ARCHIVE_FILENAME)"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_LLAMA2_SOURCE_DIR)/run: $(KEFIR_EXTERNAL_TEST_LLAMA2_SOURCE_DIR)/.extracted $(KEFIR_EXE)
	@echo "Building llama2.c $(KEFIR_EXTERNAL_TEST_LLAMA2_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_LLAMA2_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		$(MAKE) CC="$(realpath $(KEFIR_EXE))"

$(KEFIR_EXTERNAL_TEST_LLAMA2_DIR)/tests.log: $(KEFIR_EXTERNAL_TEST_LLAMA2_SOURCE_DIR)/run $(KEFIR_EXTERNAL_TEST_LLAMA2_STORIES15M_FILEPATH)
	@echo "Testing llama2.c $(KEFIR_EXTERNAL_TEST_LLAMA2_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_LLAMA2_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		bash -c 'set -o pipefail; ./run $(realpath $(KEFIR_EXTERNAL_TEST_LLAMA2_STORIES15M_FILEPATH)) -t 0.0 | tee "$(shell realpath "$@.tmp")"'
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TESTS_DIR)/llama2.test.done: $(KEFIR_EXTERNAL_TEST_LLAMA2_DIR)/tests.log
	@$(SOURCE_DIR)/tests/external/llama2/validate.sh "$(KEFIR_EXTERNAL_TEST_LLAMA2_DIR)/tests.log"
	@touch "$@"
	@echo "llama2.c $(KEFIR_EXTERNAL_TEST_LLAMA2_VERSION) test suite successfully finished"

EXTERNAL_TESTS_SLOW_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/llama2.test.done
