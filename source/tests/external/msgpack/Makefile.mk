
KEFIR_EXTERNAL_TEST_MSGPACK_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/msgpack

KEFIR_EXTERNAL_TEST_MSGPACK_VERSION := 6.1.0
KEFIR_EXTERNAL_TEST_MSGPACK_ARCHIVE_FILENAME := msgpack-c-$(KEFIR_EXTERNAL_TEST_MSGPACK_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_MSGPACK_ARCHIVE := $(KEFIR_EXTERNAL_TEST_MSGPACK_DIR)/$(KEFIR_EXTERNAL_TEST_MSGPACK_ARCHIVE_FILENAME)
KEFIR_EXTERNAL_TEST_MSGPACK_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_MSGPACK_DIR)/msgpack-c-$(KEFIR_EXTERNAL_TEST_MSGPACK_VERSION)
KEFIR_EXTERNAL_TEST_MSGPACK_URL := https://github.com/msgpack/msgpack-c/releases/download/c-$(KEFIR_EXTERNAL_TEST_MSGPACK_VERSION)/$(KEFIR_EXTERNAL_TEST_MSGPACK_ARCHIVE_FILENAME)

KEFIR_EXTERNAL_TEST_MSGPACK_ARCHIVE_SHA256 := 674119f1a85b5f2ecc4c7d5c2859edf50c0b05e0c10aa0df85eefa2c8c14b796

$(KEFIR_EXTERNAL_TEST_MSGPACK_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_MSGPACK_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_MSGPACK_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_MSGPACK_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_MSGPACK_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_MSGPACK_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_MSGPACK_ARCHIVE_FILENAME)..."
	@cd "$(KEFIR_EXTERNAL_TEST_MSGPACK_DIR)" && tar xvf "$(KEFIR_EXTERNAL_TEST_MSGPACK_ARCHIVE_FILENAME)"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_MSGPACK_SOURCE_DIR)/build/Makefile: $(KEFIR_EXTERNAL_TEST_MSGPACK_SOURCE_DIR)/.extracted $(KEFIR_EXE)
	@echo "Building msgpack $(KEFIR_EXTERNAL_TEST_MSGPACK_VERSION)..."
	@mkdir -p "$(shell dirname $@)"
	@cd "$(KEFIR_EXTERNAL_TEST_MSGPACK_SOURCE_DIR)/build" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		cmake -DCMAKE_C_COMPILER="$(realpath $(KEFIR_EXE))" -DMSGPACK_BUILD_TESTS=ON ..

$(KEFIR_EXTERNAL_TEST_MSGPACK_SOURCE_DIR)/build/libmsgpack-c.so: $(KEFIR_EXTERNAL_TEST_MSGPACK_SOURCE_DIR)/build/Makefile
	@echo "Building msgpack $(KEFIR_EXTERNAL_TEST_MSGPACK_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_MSGPACK_SOURCE_DIR)/build" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		$(MAKE) CC="$(realpath $(KEFIR_EXE))"

$(KEFIR_EXTERNAL_TEST_MSGPACK_DIR)/tests.log: $(KEFIR_EXTERNAL_TEST_MSGPACK_SOURCE_DIR)/build/libmsgpack-c.so
	@echo "Testing msgpack $(KEFIR_EXTERNAL_TEST_MSGPACK_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_MSGPACK_SOURCE_DIR)/build" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		bash -c 'set -o pipefail; $(MAKE) test CC="$(realpath $(KEFIR_EXE))" 2>&1 | tee "$(shell realpath "$@.tmp")"'
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TESTS_DIR)/msgpack.test.done: $(KEFIR_EXTERNAL_TEST_MSGPACK_DIR)/tests.log
	@$(SOURCE_DIR)/tests/external/msgpack/validate.sh "$(KEFIR_EXTERNAL_TEST_MSGPACK_DIR)/tests.log"
	@touch "$@"
	@echo "msgpack $(KEFIR_EXTERNAL_TEST_MSGPACK_VERSION) test successfully finished"

EXTERNAL_TESTS_FAST_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/msgpack.test.done
