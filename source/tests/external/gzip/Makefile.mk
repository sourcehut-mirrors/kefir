
KEFIR_EXTERNAL_TEST_GZIP_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/gzip

KEFIR_EXTERNAL_TEST_GZIP_VERSION := 1.14
KEFIR_EXTERNAL_TEST_GZIP_ARCHIVE_FILENAME := gzip-$(KEFIR_EXTERNAL_TEST_GZIP_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_GZIP_ARCHIVE := $(KEFIR_EXTERNAL_TEST_GZIP_DIR)/gzip-$(KEFIR_EXTERNAL_TEST_GZIP_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_GZIP_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_GZIP_DIR)/gzip-$(KEFIR_EXTERNAL_TEST_GZIP_VERSION)
KEFIR_EXTERNAL_TEST_GZIP_URL := https://mirror.bahnhof.net/pub/gnu/gzip/$(KEFIR_EXTERNAL_TEST_GZIP_ARCHIVE_FILENAME)

KEFIR_EXTERNAL_TEST_GZIP_ARCHIVE_SHA256 := 613d6ea44f1248d7370c7ccdeee0dd0017a09e6c39de894b3c6f03f981191c6b

$(KEFIR_EXTERNAL_TEST_GZIP_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_GZIP_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_GZIP_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_GZIP_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_GZIP_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_GZIP_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_GZIP_ARCHIVE_FILENAME)..."
	@cd "$(KEFIR_EXTERNAL_TEST_GZIP_DIR)" && tar xvfz "$(KEFIR_EXTERNAL_TEST_GZIP_ARCHIVE_FILENAME)"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_GZIP_SOURCE_DIR)/Makefile: $(KEFIR_EXTERNAL_TEST_GZIP_SOURCE_DIR)/.extracted $(KEFIR_EXE)
	@echo "Configuring gzip $(KEFIR_EXTERNAL_TEST_GZIP_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_GZIP_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		./configure

$(KEFIR_EXTERNAL_TEST_GZIP_SOURCE_DIR)/gzip: $(KEFIR_EXTERNAL_TEST_GZIP_SOURCE_DIR)/Makefile
	@echo "Building gzip $(KEFIR_EXTERNAL_TEST_GZIP_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_GZIP_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		$(MAKE)

$(KEFIR_EXTERNAL_TEST_GZIP_DIR)/tests.log: $(KEFIR_EXTERNAL_TEST_GZIP_SOURCE_DIR)/gzip
	@echo "Testing gzip $(KEFIR_EXTERNAL_TEST_GZIP_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_GZIP_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		CC="$(realpath $(KEFIR_EXE))" \
		bash -c 'set -o pipefail; $(MAKE) check 2>&1 | tee "$(shell realpath "$@.tmp")"'
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TESTS_DIR)/gzip.test.done: $(KEFIR_EXTERNAL_TEST_GZIP_DIR)/tests.log
	@$(SOURCE_DIR)/tests/external/gzip/validate.sh "$(KEFIR_EXTERNAL_TEST_GZIP_DIR)/tests.log"
	@touch "$@"
	@echo "gzip $(KEFIR_EXTERNAL_TEST_GZIP_VERSION) test successfully finished"

EXTERNAL_TESTS_FAST_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/gzip.test.done
