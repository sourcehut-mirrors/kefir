
KEFIR_EXTERNAL_TEST_GARENA_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/garena

KEFIR_EXTERNAL_TEST_GARENA_VERSION := 33eb69c5b02a79b96016f23a6e63d3af289e29ca
KEFIR_EXTERNAL_TEST_GARENA_ARCHIVE_FILENAME := $(KEFIR_EXTERNAL_TEST_GARENA_VERSION).zip
KEFIR_EXTERNAL_TEST_GARENA_ARCHIVE := $(KEFIR_EXTERNAL_TEST_GARENA_DIR)/$(KEFIR_EXTERNAL_TEST_GARENA_ARCHIVE_FILENAME)
KEFIR_EXTERNAL_TEST_GARENA_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_GARENA_DIR)/garena-$(KEFIR_EXTERNAL_TEST_GARENA_VERSION)
KEFIR_EXTERNAL_TEST_GARENA_URL := https://github.com/ccgargantua/garena/archive/$(KEFIR_EXTERNAL_TEST_GARENA_ARCHIVE_FILENAME)

KEFIR_EXTERNAL_TEST_GARENA_ARCHIVE_SHA256 := d4f0b45e0130d22f20ea4e932dcabdfdcc561757cc40c67d316595d5d7d9d421

$(KEFIR_EXTERNAL_TEST_GARENA_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_GARENA_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_GARENA_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_GARENA_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_GARENA_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_GARENA_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_GARENA_ARCHIVE_FILENAME)..."
	@cd "$(KEFIR_EXTERNAL_TEST_GARENA_DIR)" && unzip -o "$(KEFIR_EXTERNAL_TEST_GARENA_ARCHIVE_FILENAME)"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_GARENA_SOURCE_DIR)/tests: $(KEFIR_EXTERNAL_TEST_GARENA_SOURCE_DIR)/.extracted $(KEFIR_EXE)
	@echo "Building garena $(KEFIR_EXTERNAL_TEST_GARENA_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_GARENA_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		$(MAKE) CC="$(realpath $(KEFIR_EXE))" CFLAGS="-std=c23 -O1 -g"

$(KEFIR_EXTERNAL_TEST_GARENA_SOURCE_DIR)/tests.log: $(KEFIR_EXTERNAL_TEST_GARENA_SOURCE_DIR)/tests
	@echo "Building garena $(KEFIR_EXTERNAL_TEST_GARENA_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_GARENA_SOURCE_DIR)" && \
		bash -c 'set -o pipefail; ./tests 2>&1 | tee "$(shell realpath $@.tmp)"'
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TESTS_DIR)/garena.test.done: $(KEFIR_EXTERNAL_TEST_GARENA_SOURCE_DIR)/tests.log
	@$(SOURCE_DIR)/tests/external/garena/validate.sh "$(KEFIR_EXTERNAL_TEST_GARENA_SOURCE_DIR)/tests.log"
	@touch "$@"
	@echo "Successfully tested garena $(KEFIR_EXTERNAL_TEST_GARENA_VERSION)"

EXTERNAL_TESTS_FAST_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/garena.test.done
