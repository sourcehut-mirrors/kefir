
KEFIR_EXTERNAL_TEST_SQLITE_DIR := $(KEFIR_EXTERNAL_TESTS_DIR)/sqlite

KEFIR_EXTERNAL_TEST_SQLITE_VERSION := 3450300
KEFIR_EXTERNAL_TEST_SQLITE_ARCHIVE_FILENAME := sqlite-autoconf-$(KEFIR_EXTERNAL_TEST_SQLITE_VERSION).tar.gz
KEFIR_EXTERNAL_TEST_SQLITE_ARCHIVE := $(KEFIR_EXTERNAL_TEST_SQLITE_DIR)/$(KEFIR_EXTERNAL_TEST_SQLITE_ARCHIVE_FILENAME)
KEFIR_EXTERNAL_TEST_SQLITE_SOURCE_DIR := $(KEFIR_EXTERNAL_TEST_SQLITE_DIR)/sqlite-autoconf-$(KEFIR_EXTERNAL_TEST_SQLITE_VERSION)
KEFIR_EXTERNAL_TEST_SQLITE_URL := https://www.sqlite.org/2024/sqlite-autoconf-$(KEFIR_EXTERNAL_TEST_SQLITE_VERSION).tar.gz

KEFIR_EXTERNAL_TEST_SQLITE_ARCHIVE_SHA256 := b2809ca53124c19c60f42bf627736eae011afdcc205bb48270a5ee9a38191531

$(KEFIR_EXTERNAL_TEST_SQLITE_ARCHIVE):
	@mkdir -p $(dir $@)
	@echo "Downloading $(KEFIR_EXTERNAL_TEST_SQLITE_URL)"
	@wget -O "$@.tmp" "$(KEFIR_EXTERNAL_TEST_SQLITE_URL)"
	@$(SCRIPTS_DIR)/checksum_sha256.sh "$@.tmp" "$(KEFIR_EXTERNAL_TEST_SQLITE_ARCHIVE_SHA256)"
	@mv "$@.tmp" "$@"

$(KEFIR_EXTERNAL_TEST_SQLITE_SOURCE_DIR)/.extracted: $(KEFIR_EXTERNAL_TEST_SQLITE_ARCHIVE)
	@echo "Extracting $(KEFIR_EXTERNAL_TEST_SQLITE_ARCHIVE_FILENAME)..."
	@cd "$(KEFIR_EXTERNAL_TEST_SQLITE_DIR)" && tar xvfz "$(KEFIR_EXTERNAL_TEST_SQLITE_ARCHIVE_FILENAME)"
	@touch "$@"

$(KEFIR_EXTERNAL_TEST_SQLITE_SOURCE_DIR)/Makefile: $(KEFIR_EXTERNAL_TEST_SQLITE_SOURCE_DIR)/.extracted $(KEFIR_EXE) $(LIBKEFIRRT_A)
	@echo "Configuring sqlite $(KEFIR_EXTERNAL_TEST_SQLITE_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_SQLITE_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		KEFIR_RTLIB="$(realpath $(LIBKEFIRRT_A))" \
		CC="$(realpath $(KEFIR_EXE))" \
		CFLAGS="-O1 -fPIC -pie" \
		./configure

$(KEFIR_EXTERNAL_TEST_SQLITE_SOURCE_DIR)/sqlite3: $(KEFIR_EXTERNAL_TEST_SQLITE_SOURCE_DIR)/Makefile
	@echo "Building sqlite $(KEFIR_EXTERNAL_TEST_SQLITE_VERSION)..."
	@cd "$(KEFIR_EXTERNAL_TEST_SQLITE_SOURCE_DIR)" && \
		LD_LIBRARY_PATH="$(realpath $(LIB_DIR)):$$LD_LIBRARY_PATH" \
		KEFIR_RTINC="$(realpath $(HEADERS_DIR))/kefir/runtime" \
		KEFIR_RTLIB="$(realpath $(LIBKEFIRRT_A))" \
		$(MAKE) all

$(KEFIR_EXTERNAL_TESTS_DIR)/sqlite.test.done: $(KEFIR_EXTERNAL_TEST_SQLITE_SOURCE_DIR)/sqlite3
	@echo "Validating SQLite3 $(KEFIR_EXTERNAL_TEST_SQLITE_VERSION)..."
	@$(KEFIR_EXTERNAL_TEST_SQLITE_SOURCE_DIR)/sqlite3 "$(KEFIR_EXTERNAL_TEST_SQLITE_DIR)/test.db" \
		< "$(SOURCE_DIR)/tests/external/sqlite/test1.sql"
	@$(KEFIR_EXTERNAL_TEST_SQLITE_SOURCE_DIR)/sqlite3 "$(KEFIR_EXTERNAL_TEST_SQLITE_DIR)/test.db" \
		< "$(SOURCE_DIR)/tests/external/sqlite/test2.sql" \
		2>&1 > "$(KEFIR_EXTERNAL_TEST_SQLITE_DIR)/test.log"
	@diff "$(KEFIR_EXTERNAL_TEST_SQLITE_DIR)/test.log" "$(SOURCE_DIR)/tests/external/sqlite/test.log.expected"
	@touch "$@"
	@echo "Successfully validated SQLite3 $(KEFIR_EXTERNAL_TEST_SQLITE_VERSION)"

EXTERNAL_TESTS_SLOW_SUITE += $(KEFIR_EXTERNAL_TESTS_DIR)/sqlite.test.done
